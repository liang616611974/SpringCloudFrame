<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 日志输出路径 -->
    <springProperty scope="context" name="APP_LOG_PATH" source="app.log.path"/>

    <!-- 日志等级 -->
    <springProperty scope="context" name="APP_LOG_LEVEL" source="app.log.level"/>

    <!-- 应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>

    <!-- 应用包路径 -->
    <springProperty scope="context" name="APP_PACKAGE_NAME" source="app.basePackage"/>

    <!-- 文件输出格式 -->
    <!-- <property name="PATTERN" value="%-12(%d{yyyy-MM-dd HH:mm:ss.SSS}) |-%-5level [%thread] %c [%L] -| %msg%n" />-->
    <property name="CONSOLE_PATTERN" value="%-12(%d{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%-5level) [%yellow(%21thread)] --- [%X{uuid},%X{remoteAddr},%X{requestURI},%X{userId}] --- %green(%-50c{50}) [%blue(%4L)] : %msg%n"/>
    <property name="FILE_PATTERN" value="%-12(%d{yyyy-MM-dd HH:mm:ss.SSS}) %-5level [%21thread] --- [%X{uuid},%X{remoteAddr},%X{requestURI},%X{userId}] --- %-50c{50} [%4L] : %msg%n"/>

    <!-- 文件输出路径 -->
    <property name="FILE_PATH" value="${APP_LOG_PATH}/"/>


   <!-- &lt;!&ndash; 输出到控制台 &ndash;&gt;
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="${APP_PACKAGE_NAME}" level="DEBUG"/>


    <root level="${APP_LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
    </root>
-->

    <!-- 开发环境 -->
    <springProfile name="dev">

        <!-- 输出到控制台 -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_PATTERN}</pattern>
            </encoder>
        </appender>

        <logger name="${APP_PACKAGE_NAME}" level="DEBUG"/>

        <logger name="jdbc.connection" level="OFF" />
        <logger name="jdbc.audit" level="OFF" />
        <logger name="jdbc.resultset" level="OFF" />
        <logger name="jdbc.sqlonly" level="OFF" />
        <logger name="jdbc.sqltiming" level="INFO" />

        <root level="${APP_LOG_LEVEL}">
            <appender-ref ref="CONSOLE"/>
        </root>

    </springProfile>

    <!-- 测试环境 -->
    <springProfile name="test">
        <!-- 输出到本地文件 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 文件路径 -->
            <file>${FILE_PATH}/${APP_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 文件名称 -->
                <fileNamePattern>${FILE_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.log.%i</fileNamePattern>
                <!-- 文件最大保存历史数量 -->
                <MaxHistory>30</MaxHistory>
                <!-- 文件超过50M则分割 -->
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>50MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${FILE_PATTERN}</pattern>
            </layout>
        </appender>

        <root level="${APP_LOG_LEVEL}">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="prod">
        <!-- 输出到本地文件 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 文件路径 -->
            <file>${FILE_PATH}/${APP_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 文件名称 -->
                <fileNamePattern>${FILE_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.log.%i</fileNamePattern>
                <!-- 文件最大保存历史数量 -->
                <MaxHistory>30</MaxHistory>
                <!-- 文件超过50M则分割 -->
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>50MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${FILE_PATTERN}</pattern>
            </layout>
        </appender>

        <root level="${APP_LOG_LEVEL}">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

</configuration>
